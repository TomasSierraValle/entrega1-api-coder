<h1>Carrito</h1>

{{#if cart.products.length}}
  <table class="table table-bordered table-striped">
    <thead class="table-dark">
      <tr>
        <th>Producto</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart.products}}
        <tr>
          <td>{{this.product.title}}</td>
          <td>$ {{this.product.price}}</td>
          <td>{{this.quantity}}</td>
          <td>$ {{this.subtotal}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <h4>Total: $ {{cart.total}}</h4>
  <button id="clear" class="btn btn-danger">Vaciar carrito</button>
{{else}}
  <div class="alert alert-info">Carrito vac√≠o</div>
{{/if}}

<script>
  document.getElementById('clear')?.addEventListener('click', async ()=>{
    const r = await fetch('/api/carts/{{cart._id}}', { method: 'DELETE' });
    const j = await r.json();
    if (j.status === 'success') location.reload();
    else alert('Error: ' + j.error);
  });
</script>
